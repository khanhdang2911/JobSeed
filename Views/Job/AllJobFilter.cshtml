@model List<Job>
@inject AppDbContext _context
@{
    var allLocations = _context.jobs.Select(c => c.Location).Distinct().ToList();
}
<div style="padding-top: 100px;">
    <!-- job_listing_area_start  -->
    <div class="job_listing_area plus_padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="job_filter white-bg">
                        <div class="form_inner white-bg">
                            <h3>Filter</h3>
                            <form asp-action="FilterJob" id="filter-job">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="single_field">
                                            <input type="text" name="jobFilter.SearchKeyword" placeholder="Search keyword">
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="single_field">
                                            <select class="wide" name="jobFilter.Location">
                                                <option data-display="Location" value="">Location</option>
                                                @foreach(var item in allLocations)
                                                {
                                                    <option value="@item">@item</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="single_field">
                                            <select class="wide" name="jobFilter.Category">
                                                <option data-display="Category" value="">Category</option>
                                                @foreach(var item in _context.categories)
                                                {
                                                    <option value="@item.Id">@item.CategoryName</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    
                                    <div class="col-lg-12">
                                        <div class="single_field">
                                            <select class="wide" name="jobFilter.JobType">
                                                <option data-display="Job type" value="">Job type</option>
                                                @foreach(var item in _context.jobTypes)
                                                {
                                                    <option value="@item.Id">@item.JobTitle</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    
                                    <div class="col-lg-12">
                                        <div class="single_field">
                                            <select class="wide" name="jobFilter.Gender">
                                                <option data-display="Gender" value="">Gender</option>
                                                <option value="true">Male</option>
                                                <option value="false">Female</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        
                        <div class="reset_btn">
                            <button form="filter-job" class="boxed-btn3 w-100" type="submit">Search</button>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="recent_joblist_wrap">
                        <div class="recent_joblist white-bg ">
                            <div class="row align-items-center">
                                <div class="col-md-6">
                                    <h4>Job Listing</h4>
                                </div>
                                <div class="col-md-6">
                                    <div class="serch_cat d-flex justify-content-end">
                                        <select>
                                            <option data-display="Time">Time</option>
                                            <option value="1">Most Recent</option>
                                            <option value="2">Least Recent </option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="job_lists m-0">
                        <div class="row result-search">
                            @foreach(var item in Model)
                            {
                                <div class="col-lg-12 col-md-12">
                                    <div class="single_jobs white-bg d-flex justify-content-between">
                                        <div class="jobs_left d-flex align-items-center">
                                            <div class="thumb">
                                                <img src="~/@item.ImageLink" style="width: 100%;height: 100%;">
                                            </div>
                                            <div class="jobs_conetent">
                                                <a asp-action="Detail" asp-route-id="@item.Id" ><h4>@item.JobName</h4></a>
                                                <div class="links_locat d-flex align-items-center">
                                                    <div class="location">
                                                        <p> <i class="fa fa-map-marker"></i> @item.Location</p>
                                                    </div>
                                                    <div class="location">
                                                        <p> <i class="fa fa-clock-o"></i>@item.JobType.JobTitle</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="jobs_right">
                                            <div class="apply_now">
                                                <a class="heart_mark" href="#"> <i class="fa fa-heart"></i> </a>
                                                <a asp-action="Detail" asp-route-id="@item.Id" class="boxed-btn3">Apply Now</a>
                                            </div>
                                            <div class="date">
                                                <p>Published Date: @item.PublishDate.ToString("dd/MM/yyyy")</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="pagination_wrap">
                                    <ul>
                                        <li><a href="#"> <i class="ti-angle-left"></i> </a></li>
                                        <li><a href="#"><span>01</span></a></li>
                                        <li><a href="#"><span>02</span></a></li>
                                        <li><a href="#"> <i class="ti-angle-right"></i> </a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- job_listing_area_end  -->
</div>
<script>
    $(document).ready(function () {
        $('#filter-job').on('submit', function (event) {
            event.preventDefault(); // Ngăn form không tải lại trang

            $.ajax({
                type: 'POST',
                url: '@Url.Action("FilterJob", "Job")', // Đường dẫn tới Action FilterJob trong Controller Job
                data: $(this).serialize(), // Lấy dữ liệu từ form
                success: function (data) {
                    // Cập nhật phần kết quả với dữ liệu trả về
                    $('.job_lists .row.result-search').empty().html($(data).find('.job_lists .row').html());
                },
                error: function (xhr, status, error) {
                    console.error("Lỗi khi gửi AJAX: ", error);
                }
            });
        });
    });
</script>
