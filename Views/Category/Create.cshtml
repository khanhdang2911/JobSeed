@model Category
<div style="padding: 200px;">
    <form method="post" asp-action="Create"  style="width: 30%;margin: 0 auto;" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for ="CategoryName" class="control-label" ></label>
            <input type="text" asp-for="CategoryName" class="form-control">
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
    
        <hr>
        <input type="submit" class="btn btn-success" value="Create category">
    </form>
</div>

