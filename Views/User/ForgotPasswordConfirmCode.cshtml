


<div style="padding:150px;">
    <h1 class="container alert alert-danger" style="width:60%">Please check your email to see the code we sent.</h1>
    <form method="post" asp-action="ForgotPasswordConfirmCode" style="margin:0 auto; width: 40%;" >
         <div asp-validation-summary="All"></div>
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group">
            <label name="code" class="control-label">Enter your code to confirm:</label>
            <input name="code" class="form-control">
        </div>
        <hr>
        <input type="submit" value="Confirm" class="btn btn-info">
    </form>
</div>


 @section scripts{
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }
