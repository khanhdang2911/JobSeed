@model Users

    <form method="post" asp-action="EnterNewPassword" asp-route-UsersId="@Model.Id" style="margin:0 auto; width: 40%;">
        <div asp-validation-summary="All"></div>
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label">Nhập mật khẩu mới</label>
            <input name="newpassword" class="form-control" type="password">
        </div>
        <div class="form-group">
            <label class="control-label">Xác nhận lại mật khẩu mới</label>
            <input name="newpasswordConfirm" class="form-control" type="password">
        </div>
        <hr>
        <input type="submit" value="Xác nhận" class="btn btn-info">
    </form>



 @section scripts{
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }
